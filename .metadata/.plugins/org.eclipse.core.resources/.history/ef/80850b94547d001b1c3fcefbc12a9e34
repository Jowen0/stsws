package org.zerock.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.zerock.dto.TodoDTO;
import org.zerock.entity.Todo;
import org.zerock.mapper.TodoMapper;

import lombok.RequiredArgsConstructor;
import lombok.extern.log4j.Log4j;

@Controller
@RequestMapping("/todo/*") //안전하게 ("/todo/*")선언 //요즘 트랜드 - 43분
@Log4j
@RequiredArgsConstructor
public class TodoController {
	
	@GetMapping("/add") //spring 4.3부터 GET/POST Mapping 지원
	public void add() {
		
		log.info("get...........");
		
	}
	
	@PostMapping("/add")
	public String addPost(TodoDTO todoDTO) {
		
		log.info(todoDTO);
		
		Todo todo = Todo.builder()
				.title(todoDTO.getTitle())
				.complete(todoDTO.getComplete())
				.build();
		
		return "redirect:/todo/list";
	}
	
	@GetMapping("/list")
	public void list() {
		log.info("list..........");
	}
	
}
